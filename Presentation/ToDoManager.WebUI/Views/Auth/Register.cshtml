@model RegisterViewModel
<div class="d-flex justify-content-center ">
    <form method="post">
        <div class="form-group">
            <label>Ad</label>
            <input type="text" asp-for="Name" class="form-control" placeholder="Adınızı Giriniz" />
        </div>
        <div class="form-group">
            <label>Soyad</label>
            <input type="text" asp-for="Surname" class="form-control" placeholder="Soyadınızı Giriniz" />
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Emailinizi Giriniz">
        </div>
        <div class="form-group">
            <label>Telefon</label>
            <input type="tel" asp-for="Phone" class="form-control" placeholder="Telefon Numaranızı Giriniz">
        </div>
        <div class="form-group">
            <label>Şifre</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Şifrenizi Giriniz">
        </div>
        <div class="form-group">
            <label>Şifre Tekrarı</label>
            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Şifrenizi Giriniz">
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </div>
    </form>
</div>